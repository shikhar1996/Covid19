                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/total_count": {
            "post": {
                "description": "Take the latitude and longitude as input and return total number of coved cases in that state along with time stamp",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "covid"
                ],
                "summary": "Get total number of covid cases",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Latitude",
                        "name": "latitude",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Longitude",
                        "name": "longitude",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/database.Response"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "503": {
                        "description": "Service Unavailable",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/update_data": {
            "get": {
                "description": "This API calls \"https://api.rootnet.in/covid19-in/stats/latest\" API and update the Covid Data",
                "consumes": [
                    "*/*"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "covid"
                ],
                "summary": "Update the MongoDB Database",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "database.Response": {
            "type": "object",
            "properties": {
                "Count": {
                    "type": "integer",
                    "example": 274405
                },
                "LastUpdated": {
                    "type": "string",
                    "example": "2021-03-21T12:40:03.823+05:30"
                },
                "State": {
                    "type": "string",
                    "example": "Madhya Pradesh"
                }
            }
        }
    }
